package school;

import java.util.List;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.PagingAndSortingRepository;
import org.springframework.data.repository.query.Param;
import org.springframework.data.rest.core.annotation.RepositoryRestResource;

@RepositoryRestResource(collectionResourceRel = "grade", path = "grade")
public interface GradeRepository extends PagingAndSortingRepository<Grade, Long> {

	@Query("SELECT s FROM Student s where grade = ?1 and section=?2")
	Grade findByGradeNSection(@Param("grade") Integer grade,@Param("section") String section);

}
